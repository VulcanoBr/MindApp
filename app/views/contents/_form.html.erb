<% if @content.errors.any? %>
        Errors: <%= @content.errors.full_message.join(', ') %>
        <BR><BR>
<% end %>

<%= form_with (model: content, local:true) do |form| %>
    <div class='form-group'>
        <%= label.field :title %>
        <%= form.text_field :title, class:'form-control' %>
    </div>

    <div class='form-group'>
        <%= label.field :description %>
        <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class='form-group'>
        <%= label.field :tags %>
        <%= form.select :tags, option_for_select(current.user.tags.pluck(:name), content.tags.pluck(:name)), {}, { class: 'select2 form-control', multiple: 'multiple' } %>
    </div>

    <div class='action'>
        <%= form.submit 'Save', class: 'btn btn-primary' %>
    </div>
<% end %>